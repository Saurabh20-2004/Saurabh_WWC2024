#include<iostream>
#include<string>
using namespace std;

void academic_Bio(string name, string uid, string section, string aoe, double cgpa, string dob, string hometown){
	cout<<"             Academic Bio:          "<<endl;
	
	cout<<"Name: "<<name<<endl;
	cout<<"UID: "<<uid<<endl;
	cout<<"Section: "<<section<<endl;
	cout<<"Area of interest: "<<aoe<<endl;
	cout<<"CGPA: "<<cgpa<<endl;
	cout<<"Date of Birth: "<<dob<<endl;
	cout<<"HomeTown: "<<hometown<<endl; 
}

int main(){
	string name,uid,section,aoe,dob,hometown = "";
	double cgpa;
	
	cout<<"Enter Academic Bio"<<endl;
	cin>>name>>uid>>section>>aoe>>dob>>hometown>>cgpa;
	
	academic_Bio(name,uid,section,aoe,cgpa,dob,hometown);
}
